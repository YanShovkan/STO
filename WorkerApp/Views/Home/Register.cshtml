@{
    ViewData["Title"] = "Register";
}
<div class="text-center">
    <h2 class="display-4">Регистрация</h2>
</div>
<br />
<form method="post" class="text-center">
    <div class="row">
        <div class="col-12">Имя:</div>
    </div>
    <div class="row">
        <div class="col-12"><input type="text" name="WorkerName" /></div>
    </div>
    <br />
    <div class="row">
        <div class="col-12">Логин:</div>
    </div>
    <div class="row">
        <div class="col-12"><input type="text" name="WorkerLogin" /></div>
    </div>
    <br />
    <div class="row">
        <div class="col-12">Пароль:</div>
    </div>
    <div class="row">
        <div class="col-12"><input type="password" name="WorkerPassword" /></div>
    </div>
    <br />

    <div class="row">
        <div class="col-12"><input type="submit" value="Регистрация" class="btn btn-primary" /></div>
    </div>
</form>